<header class="page-header">
  <h1>Admin Dashboard</h1>
</header>

<div class="panel panel-default">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Stats</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to "Product", admin_products_path %> count
        </td>
        <td class="expand">
          <%= @product_count %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to "Category", admin_categories_path %> count
        </td>
        <td>
          <%= @category_count %>
        </td>
      </tr>
    </tbody>
  </table>

</div>
